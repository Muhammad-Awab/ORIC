@page "/projects"


@attribute [Authorize(Roles = "Admin")]
@inject AuthenticationStateProvider AuthenticationStateProvider

<AuthorizeView Roles="Admin">
    <Authorized>

        
        <div class="container">
            <h1 class="text-center">Projects</h1>
            <div class="row">
                <div class="col-md-6">
                    <input type="text" class="form-control" placeholder="Search">
                </div>
                <div class="col-md-6">
                    <a href="/add-project" class="btn btn-primary float-right">Add Project</a>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Project Name</th>
                                <th scope="col">Project Description</th>
                                <th scope="col">Project Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Project 1</td>
                                <td>Project 1 Description</td>
                                <td>Active</td>
                                <td>
                                    <button class="btn btn-primary">Edit</button>
                                    <button class="btn btn-danger">Delete</button>
                                    <a href="/view-project" class="btn btn-success">View</a>

                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Project 2</td>
                                <td>Project 2 Description</td>
                                <td>Active</td>
                                <td>
                                    <button class="btn btn-primary">Edit</button>
                                    <button class="btn btn-danger">Delete</button>
                                    <a href="/view-project" class="btn btn-success">View</a>

                                </td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>Project 3</td>
                                <td>Project 3 Description</td>
                                <td>Active</td>
                                <td>
                                    <button class="btn btn-primary">Edit</button>
                                    <button class="btn btn-danger">Delete</button>
                                    <a href="/view-project" class="btn btn-success">View</a>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </Authorized>
    <NotAuthorized>
        <h3>You are not authorized to view this content.</h3>
    </NotAuthorized>
</AuthorizeView>
